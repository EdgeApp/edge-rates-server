{
  "name": "edge-rates-server",
  "version": "0.1.0",
  "private": true,
  "description": "A REST API for retrieving and storing historical crypto and fiat exchange rates.",
  "repository": "https://github.com/EdgeApp/edge-rates-server",
  "license": "MIT",
  "author": "Airbitz, Inc.",
  "main": "lib/index.js",
  "scripts": {
    "build.lib": "sucrase -q -t typescript,imports,jsx -d ./lib ./src",
    "build.types": "tsc",
    "clean": "rimraf lib",
    "fix": "npm run lint -- --fix",
    "forever": "npm run forever:rates && npm run forever:engines",
    "forever:rates": "forever-service install ratesServer -r $USER --script lib/index.js",
    "forever:engines": "forever-service install ratesEngines -r $USER --script lib/ratesEngine.js",
    "forever:start": "service ratesServer start && service ratesEngines start",
    "forever:stop": "service ratesServer stop && service ratesEngines stop",
    "startEngines": "node -r sucrase/register src/ratesEngine.ts",
    "start": "node -r sucrase/register src/index.ts",
    "prepare": "npm-run-all clean -p build.*",
    "test": "nyc yarn test:mocha --reporter mocha-multi-reporters --reporter-options configFile=./mocha-config.json",
    "test:mocha": "mocha 'test/**/*.ts'",
    "posttest": "nyc report --reporter=cobertura --reporter=html",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "watch": "tsnd --transpile-only src/index.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/preset-react": "^7.8.3",
    "@types/chai": "^4.2.9",
    "@types/express": "^4.17.11",
    "@types/mocha": "^7.0.1",
    "@types/react": "^16.9.22",
    "@types/react-dom": "^16.9.5",
    "@typescript-eslint/eslint-plugin": "^4.15.2",
    "@typescript-eslint/parser": "^4.15.2",
    "chai": "^4.2.0",
    "eslint": "^7.20.0",
    "eslint-config-standard-kit": ">=0.15.1",
    "eslint-plugin-import": ">=2.18.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": ">=3.0.0",
    "eslint-plugin-promise": ">=4.2.1",
    "eslint-plugin-react": ">=7.14.2",
    "eslint-plugin-simple-import-sort": ">=7.0.0",
    "eslint-plugin-standard": ">=5.0.0",
    "husky": ">=5.1.1",
    "lint-staged": ">=9.0.0",
    "mocha": "^7.0.1",
    "mocha-junit-reporter": "^2.0.0",
    "mocha-multi-reporters": "^1.5.1",
    "mochawesome": "^6.2.1",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "parcel": "^1.12.4",
    "prettier": ">=2.2.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "sucrase": "^3.12.1",
    "typescript": "~4.1.0"
  },
  "dependencies": {
    "await-lock": "^2.1.0",
    "biggystring": "^4.0.0",
    "cleaners": "^0.3.5",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "jsonschema": "^1.2.6",
    "morgan": "^1.10.0",
    "nano": "^9.0.3",
    "node-fetch": "^2.6.0",
    "promisify-node": "^0.5.0"
  }
}
